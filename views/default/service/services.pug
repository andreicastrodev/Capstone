doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
  link(rel='stylesheet' href='css/style-1.css')
  title= pageTitle
  include ../../includes/navigation-bar.pug

main.main
 .card-container
   each service in services
    .card
      .card__header
        .card__picture
          img.card__picture-img(src=service.imageUrl alt='Tour 1')
        h3.heading-tertirary
          span= service.title
      .card__details
        h4.card__sub-heading About
        p.card__text
            =`${service.description.substring(0, 250)}`
        .card__data
          svg.card__icon
          span= service.location
        .card__data
          svg.card__icon
          span Barangay 20
      .card__footer
        a.btn.btn--green.btn--small(href=`/services/${service._id}`) Details
        