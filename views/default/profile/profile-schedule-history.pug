include ../../includes/profile/profile-head.pug

.container-scroller
  include ../../includes/profile/profile-navbar-up.pug
  .container-fluid.page-body-wrapper
    include ../../includes/profile/profile-navbar-side.pug
    .main-panel
      .content-wrapper
        .row
          .col-lg-12.grid-margin.stretch-card
            .card
              .card-body
                h4.card-title Schedule History
                .table-responsive
                if schedules.length === 0
                  h4.dataMessage You have no schedules  
                else            
                  each schedule in schedules                 
                    table.table.table-striped
                      thead
                        tr
                          th Service
                          th Location
                          th Date
                          th Status
                          th Actions
                        tbody
                          tr
                            td= schedule.serviceId.title                            
                            td= schedule.serviceId.location  
                            td= schedule.date
                            td= schedule.status
                            if (schedule.status === 'Confirmed')
                              td
                                a(href=`/profile/schedule/${schedule._id}`) 
                                  button.btn.btn-dark.btn-icon-text(type='button')
                                      | Invoice
                                      i.ti-file.btn-icon-append
                            else
                               td
                                a(href=`/profile/schedule/${schedule._id}`) 
                                  button.btn.btn-dark.btn-icon-text(type='button' disabled="true")
                                      | Invoice
                                      i.ti-file.btn-icon-append             



 
