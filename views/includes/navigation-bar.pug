block vars
.wrapper
  .navbar.navbar_3
    .navbar_left
      .logo
        a(href="/") 
          span Group 4
      ul(class="global menu")
        if isAuth         
          li(class="global")
            a(href='/services', class="global" ) Services
          li(class="global") 
            a(href='/inquiry' , class="global")  Inquiry
          li(class="global") 
            a(href='/profile' , class="global") Profile
