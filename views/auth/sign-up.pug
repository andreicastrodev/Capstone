doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
  link(rel='stylesheet' href='css/style-1.css')
  title= pageTitle
  include ../includes/navigation-bar.pug

main.main
    .singup-form
        if (errorMessage)
          div(class="user-message user-message--error")= errorMessage
        h2.heading-secondary.ma-bt-lg create your account!
        form.form.form--signup(action="/sign-up", method="POST" novalidate)
            .form__group
                label.form__label(for='name') Your name
                input#name.form__input(type='text', name="name", value=oldInput.name placeholder='')
            .form__group
                label.form__label(for='email') Email address
                input#email.form__input(type='email', name="email", value=oldInput.email   place
                holder='you@example.com')
            .form__group
                label.form__label(for='email') Mobile Number
                input.form__input(type='number', name="mobileNumber", value=oldInput.mobileNumber place
                holder='0000000000')                
            .form__group.ma-bt-md
                  label.form__label(for='password') Password
                    input#password.form__input(type='password' name="password", placeholder='••••••••' minlength='8')
            .form__group.ma-bt-md
                    label.form__label(for='passwordConfirm') Confirm password
                    input#passwordConfirm.form__input(type='password' name="confirmPassword", placeholder='••••••••' minlength='8')
            .form__group
                    button.btn.btn--green(type="submit") Sign up