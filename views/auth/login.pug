doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
  link(rel='stylesheet' href='css/style-1.css')
  title= pageTitle
  include ../includes/navigation-bar.pug

  main.main
    .login-form
      if (errorMessage)
        div(class="user-message user-message--error")= errorMessage
      h2.heading-secondary.ma-bt-lg Log into your account
      form.form.form--login(action="/login", method="POST")
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', name="email",placeholder='you@example.com', value=oldInput.email required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', name='password',placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green(type="submit") Login